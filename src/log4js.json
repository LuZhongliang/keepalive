{
  "appenders": [
    {
      "type": "console",
      "category": "console"
    },
    {
      "category": "log_file",
      "type": "file",
      "filename": "./logs/server.log",
      "maxLogSize": 104800,
      "backups": 100
    },
    {
      "category": "log_date",
      "type": "dateFile",
      "filename": "./logs/server",
      "alwaysIncludePattern": true,
      "pattern": "-yyyy-MM-dd-hh.log"
    }
  ],
  "replaceConsole": true,
  "levels": {
    "log_file": "ALL",
    "console": "ALL",
    "log_date": "ALL"
  }
}